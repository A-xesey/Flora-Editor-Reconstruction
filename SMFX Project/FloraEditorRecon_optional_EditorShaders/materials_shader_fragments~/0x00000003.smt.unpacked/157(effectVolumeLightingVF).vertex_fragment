vertexFragment effectVolumeLightingVF
	declareCode
		extern uniform float4 patchLocation;
		extern uniform struct { float4 mDir; float4 mColor; } dirLightsWorld[4];
	endCode

	code
		half3 litcolor;
		{
		const half ambient = 0.25;
		half3 lightingNormal = normalize( quadPos - patchLocation );
		half LdotN = saturate( dot( lightingNormal, dirLightsWorld[0].mDir.xyz ) );
		litcolor.rgb = lerp( color.rgb * dirLightsWorld[0].mColor * LdotN, color, ambient );
		}
	endCode
end
