vertexFragment uvTweak_disc
	input position

	declareCode
		extern uniform float4 uvTweak;
		extern uniform float4x3 modelToWorld;
	endCode

	code
		float2 projCentre = Current.position.xy - uvTweak.zw;
		Current.texcoord0.y = length(projCentre) * uvTweak.y;
		Current.texcoord0.x = acos(projCentre.x / length(projCentre)) * uvTweak.x * (4 / 3.14159);
		Current.texcoord0.y = 1 - Current.texcoord0.y;
		Current.texcoord0.xy *= length(modelToWorld[0]);
	endCode
end
